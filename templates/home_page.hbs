<section style="display: none;">
    {{#each categories}}
        <h2>{{name}}</h1>
            {{#each sections}}
              {{#if articles}}
                  {{#each articles}}
                  {{@index}}
                    {{#if @index <= 4}}
                      <a href="{{url}}">{{title}}</a>
                    {{#/if}}
                  {{/each}}
              {{/if}}
              <a href="{{../url}}">Ver tudo de {{name}}</a>
            {{/each}}
    {{/each}}

</section>

<section class="ticket md:w-10/12">
    <img class="ticket__image md:w-6/12" src="{{settings.new_ticket_banner__image}}" alt="Imagem ilustrativa da seção">
    
    <div class="ticket__content md:w-6/12">
        <h2 class="ticket__title">{{settings.new_ticket_banner__title}}</h2>
        <p class="ticket__description">{{settings.new_ticket_banner__description}}</p>
        {{link 'new_request' class='btn btn--primary'}}
    </div>
</section>
